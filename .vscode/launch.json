{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "preLaunchTask": "Rust: cargo build - snake",
            "request": "launch",
            "name": "Launch RetroArch - Snake",
            "program": "E:/RetroArch-Win64/retroarch.exe",
            "args": ["--libretro=target/debug/snake.dll", "snake.nes"],
            "cwd": "${workspaceFolder}/snake/",
            "stopOnEntry": true
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach RetroArch",
            "program": "E:/RetroArch-Win64/retroarch.exe"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'emo'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=emo",
                    "--package=emo"
                ],
                "filter": {
                    "name": "emo",
                    "kind": "bin"
                }
            },
            "args": ["run", "snake"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'emo'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=emo",
                    "--package=emo"
                ],
                "filter": {
                    "name": "emo",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}